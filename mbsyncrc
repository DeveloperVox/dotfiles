# ----------------------------------------------------------------------
# REMOTE MAIL STORES
# ----------------------------------------------------------------------

IMAPStore raam@raamdev.com-remote
Host imap.gmail.com
User raam@raamdev.com
PassCmd "/usr/local/bin/gpg2 -q --for-your-eyes-only --no-tty -d ~/.emacs.d/mu4e/.mbsyncpass-raam@raamdev.com.gpg"
Port 993
UseIMAPS yes
RequireSSL yes
#CertificateFile /usr/local/share/curl/curl-ca-bundle.crt

IMAPStore raam@actualwebspace.com-remote
Host imap.gmail.com
User raam@actualwebspace.com
PassCmd "/usr/local/bin/gpg2 -q --for-your-eyes-only --no-tty -d ~/.emacs.d/mu4e/.mbsyncpass-raam@actualwebspace.com.gpg"
Port 993
